{
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "nodenext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "#error-event-polyfill.js": ["./src/error-event-polyfill.ts"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
